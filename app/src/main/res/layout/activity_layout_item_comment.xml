<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:conext=".CommentsActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvUserPic"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentLeft="true"
        fresco:placeholderImage="@drawable/gray_oval" />

    <TextView
        android:id="@+id/tvUserId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_toRightOf="@+id/sdvUserPic"
        android:layout_marginLeft="12dp"
        android:layout_alignTop="@+id/sdvUserPic" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_below="@+id/tvUserId"
        android:layout_alignLeft="@+id/tvUserId" />
</RelativeLayout>